	"volta": {
		"node": "21.2.0",
		"npm": "10.2.4"
	},
	"scripts": {
		"book-clean": "rimraf book/server/src/main/resources/public",
		"book-client-dev": "cd book/client && npm run dev",
		"book-client-test-build": "cd book/client && npm run test",
		"book-client-prod-build": "cd book/client && npm run build",
		"book-dev-codegen": "graphql-codegen-esm -w",
		"book-server-dev-build-watch": "cd book/server && gradle classes --continuous -x test -Dspring.profiles.active=development",
		"book-server-dev-run": "cd book/server && gradle bootRun --args='--spring.profiles.active=development'",
		"book-server-stripe": "stripe listen -l -e payment_intent.succeeded --forward-to localhost:8080/stripe/webhook",
		"book-server-build-test": "cd book/server && gradle bootJar -Dspring.profiles.active=testing && cd ../..",
		"book-server-build-prod": "cd book/server && gradle bootJar -Dspring.profiles.active=production && cd ../..",
		"book-test-run": "cd book/server && java -jar build/libs/book.jar --spring.profiles.active=testing && cd ../..",
		"book-dev": "clear && npm run book-clean && concurrently 'npm run book-dev-codegen' 'npm run book-client-dev' 'npm run book-server-dev-build-watch' 'npm run book-server-dev-run' 'npm run book-server-stripe'",
		"book-test": "clear && npm run book-client-test-build && npm run book-build-public && npm run book-server-build-test && concurrently 'npm run book-test-run' 'npm run book-server-stripe'",
		"book-scp": "scp /home/op/code/xtremehiphopwithtash/book/server/build/libs/book.jar xtremehiphopwithtash:/home/ec2-user/book.jar",
		"book-build-public": "npm run book-clean && cp -R book/client/dist/. book/server/src/main/resources/public",
		"book-build": "npm run book-client-prod-build && npm run book-build-public && npm run book-server-build-prod",
		"book-update": "ncu -u && npm i --legacy-peer-deps && cd book/client && ncu -u && npm i && cd ../server && gradle build && cd ../..",
		"book-deploy": "npm run book-scp",
		"book-build-deploy": "npm run book-build && npm run book-deploy",
		"git-push": "git add -A && git commit -m 'Update' && git push",
		"eslint-check": "eslint --ext .ts,.tsx .",
		"prettier-write": "prettier --ignore-path .gitignore -w ."
	},
	"devDependencies": {
		"@graphql-codegen/add": "5.0.0",
		"@graphql-codegen/cli": "5.0.0",
		"@graphql-codegen/client-preset": "4.1.0",
		"@graphql-codegen/near-operation-file-preset": "3.0.0",
		"@graphql-codegen/typescript": "4.0.1",
		"@graphql-codegen/typescript-resolvers": "4.0.1",
		"@oly_op/cspell-dict": "^1.1.2",
		"@oly_op/eslint-config": "6.5.0",
		"@oly_op/eslint-config-graphql": "1.1.0",
		"@oly_op/eslint-config-react": "4.0.0",
		"@oly_op/prettier-config": "1.7.8",
		"@oly_op/tsconfig": "1.2.0",
		"@parcel/watcher": "2.3.0",
		"concurrently": "8.2.2",
		"copy-and-watch": "0.1.6",
		"cross-env": "7.0.3",
		"graphql": "16.8.1",
		"rimraf": "5.0.5",
		"rollup-plugin-visualizer": "5.9.3",
		"ts-node": "10.9.1"
	}
}
